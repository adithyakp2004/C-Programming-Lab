6. Write functions to implement string operations such as compare, concatenate, and find 
string length. Use parameter passing techniques. (using pointer argument)

#include <stdio.h>
int stringLength (char str[]) 
{
 int len = 0;
 while (str[len] != '\0') 
{
 len++;
 }
 return len;
}
// Function to compare two strings (Call by reference using pointers)
int stringCompare (char *s1, char *s2)
{
 while (*s1 && *s2)
{
 if (*s1 != *s2)
 return (*s1 - *s2);
 s1++;
 s2++;
 }
 return (*s1 - *s2);
}
// Function to concatenate two strings (Call by reference)
void stringConcat (char *s1, char *s2) 
{
 while (*s1) 
{
 s1++; // Move pointer to end of first string
 }
 while (*s2) 
{
 *s1 = *s2;
 s1++;
 s2++;
 }
 *s1 = '\0'; // Add null terminator
}
int main() 
{
 char str1[100], str2[100];
 int choice, result;
 printf ("Enter first string: ");
 gets(str1); 
 printf("Enter second string: ");
 gets(str2);
 printf ("\n Choose operation: ");
 printf ("\n 1. Find length of string 1 ");
 printf ("\n 2. Compare strings\n");
 printf ("\n 3. Concatenate strings\n");
 printf ("Enter choice: ");
 scanf ("%d", &choice);
switch (choice) 
{
 case 1:
 printf ("Length of string-1 = %d\n", stringLength(str1) );
 break;
 case 2:
 result = stringCompare (str1, str2);
 if (result == 0)
 printf ("Strings are equal.\n");
 else if (result > 0)
 printf ("String 1 is greater than String 2.\n");
 else
 printf ("String 2 is greater than String 1.\n");
 break;
 case 3:
 stringConcat (str1, str2);
 printf ("After concatenation: %s\n", str1);
 break;
 default:
 printf ("Invalid choice!\n");
 }
 return 0;
}
